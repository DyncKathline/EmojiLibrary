<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.dync.emoji.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_emoji2unicode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_show_unicdoe"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="输入表情文本"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textPersonName"
            android:singleLine="true" />

        <Button
            android:id="@+id/btn_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/edt_emoji"
            android:layout_alignTop="@id/edt_emoji"
            android:text="发送emoji" />

        <TextView
            android:id="@+id/tv_show_unicdoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="Hello World!"
            android:textIsSelectable="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_unicode2emoji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_emoji2unicode"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/edt_unicode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_show_emoji"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="输入unicode文本"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textPersonName"
            android:singleLine="true" />

        <Button
            android:id="@+id/btn_unicode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/edt_unicode"
            android:layout_alignTop="@id/edt_unicode"
            android:text="发送unicode" />

        <TextView
            android:id="@+id/tv_show_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="Hello World!"
            android:textIsSelectable="true" />

    </RelativeLayout>

</RelativeLayout>
